{
  "name": "codemirror-promql",
  "version": "0.8.2",
  "description": "a CodeMirror mode for the PromQL language",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.cjs --open",
    "build": "tsc",
    "build-app": "webpack",
    "test": "node --experimental-specifier-resolution=node --experimental-modules --loader ts-node/esm node_modules/mocha/lib/cli/cli.js src/**/*.test.ts",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint --fix src/ --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prometheus-community/codemirror-promql.git"
  },
  "keywords": [
    "promql",
    "codemirror",
    "mode",
    "prometheus"
  ],
  "author": "Prometheus Authors <prometheus-developers@googlegroups.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prometheus-community/codemirror-promql/issues"
  },
  "homepage": "https://github.com/prometheus-community/codemirror-promql/blob/master/README.md",
  "dependencies": {
    "lezer-promql": "^0.12.0",
    "lezer-tree": "^0.11.0",
    "lezer": "^0.11.0",
    "vscode-languageserver-types": "^3.15.1"
  },
  "devDependencies": {
    "@codemirror/next": "^0.13.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "html-webpack-plugin": "^4.3.0",
    "mocha": "^8.1.2",
    "prettier": "^2.0.5",
    "ts-loader": "^7.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "peerDependencies": {
    "@codemirror/next": "^0.13.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 150
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
